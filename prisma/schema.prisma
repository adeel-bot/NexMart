generator client {
  provider = "prisma-client"
  output   = "../app/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model Admin {
  id Int @id @default(autoincrement())
  name String
  email String @unique
  password String
  role String
  createdAt DateTime @default(now())
  // Relations
  products Product[]
  categories Category[]
  reports Report[]
}
model Customer {
  id Int @id @default(autoincrement())
  name String
  email String @unique
  password String
  phone String?
  defaultAddress String?
  createdAt DateTime @default(now())
  // Relations
  cart Cart?
  orders Order[]
  combos Combo[]
}
model Category {
  id Int @id @default(autoincrement())
  name String
  description String?
  adminId Int
  // Relations
  admin Admin @relation(fields: [adminId], references: [id])
  products Product[]
}
model Product {
  id Int @id @default(autoincrement())
  name String
  description String?
  price Decimal @db.Decimal(10,2)
  stock Int
  sku String?
  imageUrl String?
  createdAt DateTime @default(now())
  categoryId Int
  adminId Int
  // Relations
  category Category @relation(fields: [categoryId], references: [id])
  admin Admin @relation(fields: [adminId], references: [id])
  cartItems CartItem[]
  orderItems OrderItem[]
  comboItems ComboItem[]
}
model Cart {
  id Int @id @default(autoincrement())
  customerId Int @unique
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  customer Customer @relation(fields: [customerId], references: [id])
  items CartItem[]
}
model CartItem {
  id Int @id @default(autoincrement())
  cartId Int
  productId Int
  quantity Int
  unitPrice Decimal @db.Decimal(10,2)
  // Relations
  cart Cart @relation(fields: [cartId], references: [id])
  product Product @relation(fields: [productId], references: [id])
}
model Order {
  id Int @id @default(autoincrement())
  customerId Int
  orderDate DateTime @default(now())
  status String
  totalAmount Decimal @db.Decimal(10,2)
  shippingAddress String
  billingAddress String
  // Relations
  customer Customer @relation(fields: [customerId], references: [id])
  items OrderItem[]
  payment Payment?
}
model OrderItem {
  id Int @id @default(autoincrement())
  orderId Int
  productId Int
  quantity Int
  unitPrice Decimal @db.Decimal(10,2)
  lineTotal Decimal @db.Decimal(10,2)
  // Relations
  order Order @relation(fields: [orderId], references: [id])
  product Product @relation(fields: [productId], references: [id])
}
model Payment {
  id Int @id @default(autoincrement())
  orderId Int @unique
  amount Decimal @db.Decimal(10,2)
  method String
  status String
  transactionId String?
  paidAt DateTime?
  order Order @relation(fields: [orderId], references: [id])
}
model Combo {
  id Int @id @default(autoincrement())
  customerId Int
  name String
  description String?
  totalPrice Decimal @db.Decimal(10,2)
  isSaved Boolean @default(false)
  createdAt DateTime @default(now())
  // Relations
  customer Customer @relation(fields: [customerId], references: [id])
  items ComboItem[]
}
model ComboItem {
  id Int @id @default(autoincrement())
  comboId Int
  productId Int
  quantity Int
  unitPrice Decimal @db.Decimal(10,2)
  // Relations
  combo Combo @relation(fields: [comboId], references: [id])
  product Product @relation(fields: [productId], references: [id])
}
model Report {
  id Int @id @default(autoincrement())
  adminId Int
  reportType String
  periodStart DateTime
  periodEnd DateTime
  generatedAt DateTime @default(now())
  dataJson String @db.Text
  // Relations
  admin Admin @relation(fields: [adminId], references: [id])
}